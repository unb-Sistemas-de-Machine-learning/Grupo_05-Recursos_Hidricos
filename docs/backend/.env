# Flask
FLASK_APP=app.py
FLASK_ENV=development

# Porta para rodar igual seu front (NEXT_PUBLIC_API_URL=http://localhost:3001)
PORT=3001

# Banco (arquivo SQLite na raiz do projeto)
DATABASE_PATH=app.db

# Chave secreta do Flask e do JWT (altere em produção!)
SECRET_KEY=change-this-in-production
JWT_SECRET_KEY=change-this-too
JWT_ACCESS_TOKEN_EXPIRES=3600        # 1 hora (segundos)
JWT_REFRESH_TOKEN_EXPIRES=2592000    # 30 dias (segundos)

# CORS — deixe * no DEV. Em prod, defina seu domínio(s)
CORS_ORIGINS=*
